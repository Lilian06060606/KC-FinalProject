<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:background="@drawable/ukbackg"
    android:orientation="vertical"
    tools:context=".MC">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="720dp"
        app:srcCompat="@drawable/ic_baseline_home_24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="-40dp"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-42dp"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-680dp"
        android:fontFamily="@font/janna"
        android:text="محول العُملات"
        android:textAlignment="center"
        android:textColor="#FF013C6D"
        android:textSize="40sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/Num"
        android:layout_width="379dp"
        android:layout_height="78dp"
        android:layout_marginLeft="35dp"
        android:padding="15dp"
        android:ems="10"
        android:fontFamily="@font/janna"
        android:hint="القيمة الحالية"
        android:textColorHint="#FF013C6D"
        android:textSize="25sp"  />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/janna"
        android:text="   التحويل من  :"
        android:textColor="#FF013C6D"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="387dp"
        android:layout_height="71dp"
        android:background="@drawable/shape7"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/janna"
        android:text="   التحويل إلى  :"
        android:textColor="#FF013C6D"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="387dp"
        android:layout_height="71dp"
        android:background="@drawable/shape7"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button50"
        android:layout_width="168dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="125dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/janna"
        android:text="تحويل"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#0E4A61"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>