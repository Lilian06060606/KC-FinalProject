<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abroaddd"
    android:orientation="vertical"
    tools:context=".Hwo">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="720dp"
        app:srcCompat="@drawable/ic_baseline_home_24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="-40dp"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-42dp"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="320dp"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginTop="-220dp"
        android:contentDescription="@string/app_name"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/janna"
                android:text="•تطبيق مُبتعث أحد مشاريع مبادرة الكويت تبرمج من تصميم وبرمجة : م.ليليان العبيدات ."
                android:textAlignment="center"
                android:textColor="#013C6D"
                android:textSize="23sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/janna"
                android:text="•يهدف التطبيق في المقام الأول إلى خدمة الطلبة المبتعثين في الخارج   ، خصوصًا لمن يواجه تجربة التغرُّب لأول مرة . "
                android:textAlignment="center"
                android:textColor="#013C6D"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/janna"
                android:text="•كما أنه يوفر  كل ما يحتاج إليه الطالب المُبتعث من سكن ومواصلات واستشارات ونصائح  في مكان واحد. "
                android:textAlignment="center"
                android:textColor="#013C6D"
                android:textSize="23sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/janna"
                android:text="•نسعى أن يكون هذا التطبيق الوسيط بين الطالب المُبتعث والمكاتب والسفارات؛ من أجل توفير الوقت والجهد ."
                android:textAlignment="center"
                android:textColor="#013C6D"
                android:textSize="23sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/janna"
                android:text="•نطوِّر حاليًّا مُجتمع المُبتعثين ؛ لتبادل الخبرات والمعارف بين الطلاب."
                android:textAlignment="center"
                android:textColor="#013C6D"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>