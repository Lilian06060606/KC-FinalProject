<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="398dp"
        android:layout_height="116dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="-3dp"
        android:backgroundTint="#656BE3"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/button20"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-4dp"
            android:contentDescription="@string/app_name"

            android:src="@drawable/u1" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="293dp"
            android:layout_height="43dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="University Of Oxford"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="68dp"
            android:fontFamily="sans-serif-medium"
            android:text="Link:"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="224dp"
            android:layout_height="29dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="74dp"
            android:fontFamily="sans-serif-medium"
            android:minHeight="48dp"
            android:text="https://www.ox.ac.uk/"
            android:textAlignment="textStart"
            android:textColor="#14BCAB"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="349dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/ic_baseline_favorite_24"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_baseline_favorite_24"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="36dp"
            android:layout_height="42dp"
            android:layout_marginLeft="349dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_circle_24" />

    </androidx.cardview.widget.CardView>


</LinearLayout>